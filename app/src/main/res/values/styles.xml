<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderStyle" parent="TextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CountryStyle" parent="TextStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonStyle" parent="TextStyle">
        <item name="android:background">@color/colorSubmit</item>
        <item name="android:textColor">@color/whiteColor</item>
    </style>

</resources>
